{% if error %}

    <div >{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form method="post" action="{{ path("fos_user_security_check") }}">



    <div class="box">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <h1>Dashboard</h1>

        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input  type="text" id="username" name="_username" value="{{ last_username }}" required="required" onFocus="field_focus(this, 'username');" onblur="field_blur(this, 'username');" class="email" />
<br>
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" onFocus="field_focus(this, 'password');" onblur="field_blur(this, 'password');" class="email" />


        <br>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

        <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

    </div> <!-- End Box -->

</form>

